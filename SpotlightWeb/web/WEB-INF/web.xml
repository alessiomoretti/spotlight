<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>AddReservation</servlet-name>
        <servlet-class>spotlightweb.servlets.AddReservationServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CreateEvent</servlet-name>
        <servlet-class>spotlightweb.servlets.CreateEventServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>UpdateEvent</servlet-name>
        <servlet-class>spotlightweb.servlets.UpdateEventServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DeleteItem</servlet-name>
        <servlet-class>spotlightweb.servlets.DeleteServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>AddReservation</servlet-name>
        <url-pattern>/AddReservationServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CreateEvent</servlet-name>
        <url-pattern>/CreateEvent</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UpdateEvent</servlet-name>
        <url-pattern>/UpdateEvent</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DeleteItem</servlet-name>
        <url-pattern>/DeleteItem</url-pattern>
    </servlet-mapping>

</web-app>